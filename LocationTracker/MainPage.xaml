<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationTracker.MainPage"
             Title="Location Tracker">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Location Tracker"
                   FontSize="26"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold" />

            <Button Text="Get Current Location"
                    Clicked="OnGetLocationClicked"
                    HorizontalOptions="Center" />

            <BoxView HeightRequest="1" Color="#CCCCCC" />

            <Label Text="Latitude:" FontAttributes="Bold" />
            <Label x:Name="LatitudeLabel" Text="-" />

            <Label Text="Longitude:" FontAttributes="Bold" />
            <Label x:Name="LongitudeLabel" Text="-" />

            <Label Text="Accuracy (meters):" FontAttributes="Bold" />
            <Label x:Name="AccuracyLabel" Text="-" />

            <Label Text="Last updated:" FontAttributes="Bold" />
            <Label x:Name="TimestampLabel" Text="-" />

            <Label x:Name="StatusLabel"
                   Text=""
                   TextColor="Red"
                   LineBreakMode="WordWrap" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
